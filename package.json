{
  "name": "web-fundamentals",
  "version": "1.0.0",
  "description": "Files for following Larkin's Webpack: Web Fundamentals course",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "bundle-buddy-webpack-plugin": "^0.3.0",
    "compression-webpack-plugin": "^1.1.11",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2"
  },
  "scripts": {
    "build:watch:dev": "yarn build:watch --env.env=dev",
    "build:watch:prod": "yarn build:watch --env.env=prod",
    "build:watch": "yarn build --watch",
    "build:dev:bundlebuddy": "yarn build:dev --env.addons=bundlebuddy --env.addons=bundleanalyze",
    "build:dev:bundleanalyze": "yarn build:dev --env.addons=bundleanalyze",
    "build:dev": "yarn build --env.env=dev",
    "debug:dev": "yarn debug --env.env=dev",
    "build:prod:bundlebuddy": "yarn build:prod --env.addons=bundlebuddy",
    "build:prod:bundleanalyze": "yarn build:prod --env.addons=bundleanalyze",
    "build:prod": "yarn build --env.env=prod",
    "build:allAddons": "yarn build:prod --env.addons=firstplugin --env.addons=bundleanalyze",
    "build:prod:firstplugin": "yarn build:prod --env.addons=firstplugin",
    "debug:prod": "yarn debug --env.env=prod",
    "debug": "node --inspect-brk ./node_modules/webpack/bin/webpack.js",
    "build": "webpack",
    "build:dev:server": "yarn webpack-dev-server --env.env=dev",
    "webpack-dev-server": "webpack-dev-server --port=9000 --hot",
    "webpack-defaults": "webpack-defaults"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shaderpixel/webpack-academy.git"
  },
  "keywords": [
    "webpack"
  ],
  "author": "Shaderpixel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shaderpixel/webpack-academy/issues"
  },
  "homepage": "https://github.com/Shaderpixel/webpack-academy#readme"
}
